{
  "manifest_version": 3,
  "name": "Danh sách trạm mưa (Vrain)",
  "version": "1.3",
  "description": "Hiển thị danh sách trạm mưa từ Vrain.vn, tự động cập nhật mỗi 15 phút",
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["https://data.vrain.vn/*"]
}
